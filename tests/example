import { test, expect } from '@playwright/test';

test('has title', async ({ page }) => {
import { test, expect } from '@playwright/test';

test.use({
  viewport: {
    height: 800,
    width: 1200
  }
});

test('Fill out form', async ({ page }) => {
  await page.goto('https://betterworld.org/sign-in/');
  await page.getByRole('main').locator('a').filter({ hasText: 'Sign in' }).click();
  await page.locator('div').filter({ hasText: 'Fundraising as it should be' }).first().click();
  await page.getByRole('textbox', { name: 'Email' }).click();
  await page.getByRole('textbox', { name: 'Email' }).fill('inajiff@gmail.com');
  await page.getByRole('textbox', { name: 'Password' }).click();
  await page.getByRole('textbox', { name: 'Password' }).click();
  await page.getByRole('textbox', { name: 'Password' }).fill('$20onSpring');
  await page.getByText('Fundraising as it should be Sign in Sign in Sign up Email Password Sign').click();
  await page.getByRole('button', { name: 'Sign in', exact: true }).click();
  await page.getByRole('link', { name: ' Auctions' }).click();
  await page.getByRole('link', { name: 'Manage ' }).first().click();
  await page.getByRole('listitem').filter({ hasText: 'Items' }).click();
  await page.getByRole('link', { name: 'Items' }).click();
  await page.getByRole('link', { name: 'New item', exact: true }).click();
  await page.getByRole('textbox', { name: 'Title' }).click();
  await page.getByRole('textbox', { name: 'Title' }).fill('Title');
  await page.getByRole('textbox', { name: 'Title' }).press('Tab');
  await page.getByRole('textbox', { name: 'Location ?' }).fill('Location');
  await page.getByRole('textbox', { name: 'Location ?' }).press('Tab');
  await page.getByRole('spinbutton', { name: 'Estimated value ?' }).fill('60');
  await page.getByRole('spinbutton', { name: 'Estimated value ?' }).press('Tab');
  await page.getByRole('spinbutton', { name: 'Starting bid' }).fill('20');
  await page.getByRole('combobox', { name: 'Uncategorized' }).click();
  await page.locator('#bs-select-1-1').click();
  await page.getByRole('textbox', { name: 'Short description (around 10' }).click();
  await page.getByRole('textbox', { name: 'Short description (around 10' }).fill('Short Description');
  await page.getByRole('textbox', { name: 'Short description (around 10' }).press('Tab');
  await page.locator('#overview-editor').click();
  await page.locator('#overview-editor').fill('Long Description');
  await page.getByRole('button', { name: 'Save & continue to images' }).click();
  await page.getByRole('link', { name: 'Add images' }).click();
  await page.getByRole('link', { name: 'Add image' }).click();
  await page.getByRole('link', { name: 'Browse' }).click();
  await page.getByRole('link', { name: 'Browse' }).setInputFiles('Calendar.png');
  await page.locator('#new_image_form').getByRole('button', { name: 'Save' }).click();
  await page.getByRole('link', { name: 'Add image' }).click();
  await page.getByRole('link', { name: 'Browse' }).click();
  await page.getByRole('link', { name: 'Browse' }).setInputFiles('KeyLinks.png');
  await page.locator('#new_image_form').getByRole('button', { name: 'Save' }).click();
  await page.getByRole('button', { name: 'Save' }).click();
  await page.getByRole('link', { name: 'Donor' }).click();
  await page.locator('#display_name').click();
  await page.locator('#display_name').fill('Donor Name');
  await page.locator('#display_name').press('Tab');
  await page.getByRole('textbox', { name: 'Website' }).fill('Donorwebsite.com');
  await page.getByRole('textbox', { name: 'Website' }).press('Tab');
  await page.locator('#fulfillment_name').fill('FullFillment Name');
  await page.locator('#fulfillment_name').press('Tab');
  await page.getByRole('textbox', { name: 'Email' }).fill('full@email.com');
  await page.getByRole('button', { name: 'Save' }).click();
});

test('get started link', async ({ page }) => {
  await page.goto('https://playwright.dev/');

  // Click the get started link.
  await page.getByRole('link', { name: 'Get started' }).click();

  // Expects page to have a heading with the name of Installation.
  await expect(page.getByRole('heading', { name: 'Installation' })).toBeVisible();
});
